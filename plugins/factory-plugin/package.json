{
    "name": "@eclipse-che/theia-factory-plugin",
    "keywords": [
        "theia-plugin"
    ],
    "version": "0.0.1",
    "license": "EPL-2.0",
    "files": [
        "src"
    ],
    "devDependencies": {
        "@theia/plugin": "0.3.19",
        "@theia/plugin-packager": "latest",
        "@eclipse-che/api": "latest",
        "@eclipse-che/plugin": "latest",
        "@eclipse-che/theia-scripts": "^0.0.1"
    },
    "scripts": {
        "prepare": "yarn run clean && yarn run build && yarn tslint-fix && yarn run test",
        "clean": "che-theia clean",
        "format-code": "che-theia format",
        "watch": "che-theia watch",
        "compile": "che-theia compile",
        "build": "che-theia build && theia:plugin pack",
        "tslint-fix": "che-theia lint:fix",
        "test": "jest",
        "test-watch": "jest --watchAll"
    },
    "engines": {
        "theiaPlugin": "next"
    },
    "theiaPlugin": {
        "backend": "lib/factory-plugin.js"
    },
    "jest": {
        "collectCoverage": true,
        "collectCoverageFrom": [
            "src/**/*.ts"
        ],
        "coverageDirectory": "./coverage",
        "transform": {
            "^.+\\.tsx?$": "<rootDir>/../../node_modules/ts-jest/preprocessor.js"
        },
        "modulePathIgnorePatterns": [
            "<rootDir>/lib"
        ],
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json"
        ],
        "testURL": "http://localhost/"
    }
}
